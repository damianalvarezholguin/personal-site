---
const {
  title = 'My web',
  description = 'Default description',
  image = undefined,
  url = undefined,
  noIndex = false,
  themeColor = '#0ea5a4',
  preconnect = [],
  preloadFonts = [],
  structuredData = null
}: {
  title?: string;
  description?: string;
  image?: string | undefined;
  url?: string | undefined;
  noIndex?: boolean;
  themeColor?: string;
  preconnect?: string[];
  preloadFonts?: { href: string; type: string; crossorigin?: boolean }[];
  structuredData?: any;
} = Astro.props;

const twitterCard = image ? 'summary_large_image' : 'summary';
---

<!-- Basic -->
<title>{title}</title>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="description" content={description} />
{noIndex ? <meta name="robots" content="noindex, nofollow" /> : null}
{url ? <link rel="canonical" href={url} /> : null}
<meta name="theme-color" content={themeColor} />

<!-- Favicons / PWA (using rounded PNGs) -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="shortcut icon" href="/favicon-32-rounded.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32-rounded.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16-rounded.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicon-180-rounded.png" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{image ? <meta property="og:image" content={image} /> : null}
{url ? <meta property="og:url" content={url} /> : null}

<!-- Twitter -->
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
{image ? <meta name="twitter:image" content={image} /> : null}

<!-- Performance hints -->
{preconnect.map((href: string) => (
  <link rel="preconnect" href={href} crossorigin />
))}

{preloadFonts.map((f: { href: string; type: string; crossorigin?: boolean }) => (
  <link
    rel="preload"
    href={f.href}
    as="font"
    type={f.type}
    crossorigin={f.crossorigin ? 'anonymous' : undefined}
  />
))}

<!-- Structured data (JSON-LD) -->
{structuredData ? (
  <script type="application/ld+json">{JSON.stringify(structuredData)}</script>
) : null}
